@using Capstone.Web.Models;
@model Capstone.Web.Models.Survey

@{
    ViewBag.Title = "Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("SurveyResult", "Home", FormMethod.Post))
{
    <div class="formInputGroup">
        @Html.Label("EmailAddress", "Email: ")<br />
        @Html.EditorFor(m => m.EmailAddress)<br />
        @Html.ValidationMessageFor(m => m.EmailAddress)
    </div>
    <br />
    <div>
        @Html.Label("ParkCode", "Favorite National Park: ")<br />
        @Html.DropDownListFor(m => m.ParkCode, Survey.NationalParks)

    </div>
    <br />
    
    <div class="formInputGroup">
        @Html.Label("State", "State of Residence: ")<br />
        @Html.DropDownListFor(m => m.State, Survey.States)
    </div>
    <br />
    <div class="formInputGroup">
        Activity Level:<br />
        @Html.RadioButton("ActivityLevel", "Inactive") Inactive
        @Html.RadioButton("ActivityLevel", "Sedentary") Sedentary
        @Html.RadioButton("ActivityLevel", "Active") Active
        @Html.RadioButton("ActivityLevel", "Extremely Active") Extremely Active
        @Html.ValidationMessageFor(m => m.ActivityLevel)
    </div>
    <br />
    <button type="submit" class="submit">Submit</button>
}